@model IncidentManagementProject.Models.PwReset

@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<div class="card">
    <div class="card-body">
        <h2 style="color:blue">ResetPassword</h2>

        @using (Html.BeginForm("getQuestion", "UserLogin", FormMethod.Post))
        {

        <div class="form-group">
            @Html.LabelFor(model => model.employee_mail_id) :
            <span style="color:red">*</span>
            @Html.TextBoxFor(model => model.employee_mail_id, new { @class = "form-control col-md-8 backgroundTextColor", @id = "txtid" })

            @Html.ValidationMessageFor(model => model.employee_mail_id)
            
        </div>

            <button type="submit" class="btn btn-primary" id="btnSubmitID">Get Secret Question</button>

        }
    </div>
</div>
