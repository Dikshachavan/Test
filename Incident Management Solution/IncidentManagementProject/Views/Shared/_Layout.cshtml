@Scripts.Render("~/Bundles/ckeditor")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Incident Management</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheeet" type="text/css" href="searchbar.css">

</head>

<body>
    <style>
        .pointer {
            cursor: pointer;
        }
    </style>

    <div>
        <nav class="navbar navbar-inverse" style="background-color: mediumorchid">
            <div class="container-fluid">
                <div class="navbar-header" style="text-align:left">
                    <a style="color:white;" class="navbar-brand" href="#">Incident Management</a>
                </div>
                <div class="form-inline">
                    <button class="btn btn-default" onclick="window.location.href='@Url.Action("Index", "Profile")'" title="Profile Information">
                        <svg class="bi bi-person-square" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" style="color:white;cursor:pointer" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path fill-rule="evenodd" d="M2 15v-1c0-1 1-4 6-4s6 3 6 4v1H2zm6-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </button>
                    <div id="logout" class="nav navbar-nav navbar-right">
                        <button class="btn btn-default" onclick="window.location.href='@Url.Action("Index", "UserLogin")'" title="Logout">
                            <svg class="bi bi-power" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" style="color:white;cursor:pointer" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M5.578 4.437a5 5 0 1 0 4.922.044l.5-.866a6 6 0 1 1-5.908-.053l.486.875z" />
                                <path fill-rule="evenodd" d="M7.5 8V1h1v7h-1z" />
                            </svg>
                        </button>
                    </div>

                </div>

            </div>

            <div class="col-md-12">
                <span style="text-align:center">
                    <h3 class="text-white">Hello @Session["employeeName"].ToString(), how can i help you today?</h3>
                    <p class="text-white">
                        Got a request to be fulfilled? report an incident? I have got you covered,
                        let me help you out.
                    </p>
                </span>
                @*<div>
                        <form class="form-inline">
                            <input class="form-control mr-lg-2" style="width:400px; border-radius:50px" type="search" placeholder="Search here" aria-label="Search">
                        </form>
                    </div>*@
            </div>


        </nav>
    </div>

    @RenderBody();
</body>
</html>
